<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context=".activity.Announcement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <Button
                android:id="@+id/announcement_activity_back"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:onClick="goBack"
                android:scaleType="centerInside" />
        </LinearLayout>

        <TextView
            android:id="@+id/announcement_activity_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Incident Report"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="34sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/announcement_activity_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Our Shopee promo codes give you instant discounts at this awesome online marketplace, Shopee is a mobile buy and sell app and website where you can sell yours goods or purchase from other sellers at the tap of a button, the platform offers super fast free listing of items you want to sell which means no commissions or costs for you, simply snap a picture of the product you want to sell, give it a title and description and click sell to have your item up and running within 30 seconds and being viewed by thousands of online shoppers. If youâ€™re shopping for extra discounts then be sure to check this page out to see the latest Shopee voucher codes, promotions and coupon codes, we track down the hottest offers promos from Shopee PH so that you can enjoy extra savings on your purchase"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/announcement_activity_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="TextView"
                    android:textColor="#696969"
                    android:textSize="20sp" />

            </LinearLayout>


    </ScrollView>


</LinearLayout>